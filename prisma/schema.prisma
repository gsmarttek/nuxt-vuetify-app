generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  email     String @unique
  role      Role   @relation(fields: [roleId], references: [id])
  roleId    Int    @unique
}

model Role {
  id   Int    @id @default(autoincrement())
  name String @unique
  user User?
}
